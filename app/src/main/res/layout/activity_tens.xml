<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Methodics.Tens"
    android:background="@color/main">

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/buttons"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view1"
        android:background="#c9b98d"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/butt1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="4dp"
        android:background="#c9b98d"
        app:layout_constraintTop_toBottomOf="@+id/butt2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#c9b98d"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/butt3"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/butt1"
        android:src="@drawable/addbutton"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest" />

    <ImageView
        android:id="@+id/butt2"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/addbutton"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view1" />

    <ImageView
        android:id="@+id/butt3"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:src="@drawable/addbutton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view2" />

    <TextView
        android:id="@+id/savedtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aboba"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/rosemary"
        android:textColor="@color/text"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <TextView
        android:id="@+id/quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rosemary"
        android:text="Если вы примите это решение что произодет через:"
        android:textColor="@color/text"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/savedtext"
        app:layout_constraintVertical_bias="0.147"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Правило 10/10/10"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:fontFamily="@font/rosemary"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>